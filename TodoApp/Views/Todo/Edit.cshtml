@model TodoApp.Models.Todo

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Todo</h2>

@using (Html.BeginForm("Edit", "Todo", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-container">
        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Description)
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DueDate)
            @Html.TextBoxFor(m => m.DueDate, new { type = "date", @class = "form-control", Value = Model.DueDate.HasValue ? Model.DueDate.Value.ToString("yyyy-MM-dd") : "" })
            @Html.ValidationMessageFor(m => m.DueDate, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

